generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  username  String   @unique
  dob       DateTime
  posts     Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  likes     Int      @default(0)
  comments  String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

